<style>
  /* Ensure full height and sticky footer */
  :global(body) {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    margin: 0;
  }

  :global(main) {
    flex: 1;
  }

  /* Footer container styling */
  .footer-container {
    background-color: var(--nav-bg);
    padding: 0.5rem 1rem; /* Reduced padding */
    color: var(--text);
    text-align: center;
    border-top: 1px solid var(--hover-bg); /* Optional border */
    flex-shrink: 0;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem; /* Space between links and copyright */
    flex-wrap: wrap; /* Wrap content on smaller screens */
  }

  .footer-links {
    display: flex;
    gap: 0.75rem;
  }

  .footer-links a {
    color: var(--text);
    text-decoration: none;
    font-size: 0.75rem; /* Smaller font size for compact look */
    transition: color 0.2s;
  }

  .footer-links a:hover {
    color: var(--accent);
  }

  .footer-divider {
    color: var(--text);
    font-size: 0.75rem;
  }

  .footer-copyright {
    font-size: 0.75rem;
    color: var(--text);
  }
  .icon {
        fill: currentColor; /* Inherit color from parent */
    }

  /* Responsive adjustments for smaller screens */
  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column; /* Stack items on smaller screens */
      gap: 0.5rem;
    }

    .footer-links {
      gap: 0.5rem;
    }
  }
</style>
