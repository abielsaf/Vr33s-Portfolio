---
import Layout from '../layouts/Layout.astro';
import { languageStore } from '../store/language';
import { translations } from '../i18n/translations';

const lang = languageStore.getLanguage();
const t = translations[lang];

const apiKey = import.meta.env.WEB3FORMS_ACCESS_KEY;

---


<Layout title={`${t.contact.title} | Vr33s`}>
  <main>
    <h1>{t.contact.title}</h1>
    <div class="contact-container">
      <div class="contact-info">
        <h2>{t.contact.getInTouch}</h2>
        <p>{t.contact.reachOut}</p>
        <div class="contact-details">
          <div class="detail">
            <strong>{t.contact.email}:</strong>
            <a href="mailto:your.email@example.com">your.email@example.com</a>
          </div>
          <div class="detail">
            <strong>{t.contact.location}:</strong>
            <span>Your City, Country</span>
          </div>
        </div>
      </div>
      
      <!-- Web3Forms Contact Form -->
      <form id="form" class="contact-form" method="POST">
        <input type="hidden" name="access_key" value={apiKey} />

        <div class="form-group">
          <label for="name">{t.contact.form.name}</label>
          <input type="text" id="name" name="name" required />
        </div>
        
        <div class="form-group">
          <label for="email">{t.contact.form.email}</label>
          <input type="email" id="email" name="email" required />
        </div>
        
        <div class="form-group">
          <label for="message">{t.contact.form.message}</label>
          <textarea id="message" name="message" rows="5" required></textarea>
        </div>
        
        <button type="submit" class="submit-btn">{t.contact.form.send}</button>
        <div id="result" class="form-result"></div>
      </form>
    </div>
  </main>
</Layout>

<style>
    main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  h1 {
    text-align: center;
    margin-bottom: 2rem;
  }

  .contact-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .contact-info {
    padding: 2rem;
    background-color: var(--nav-bg);
    border-radius: 10px;
  }

  .contact-details {
    margin-top: 2rem;
  }

  .detail {
    margin-bottom: 1rem;
  }

  .detail a {
    color: var(--accent);
    text-decoration: none;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  label {
    font-weight: bold;
  }

  input, textarea {
    padding: 0.8rem;
    border: 1px solid var(--nav-bg);
    border-radius: 5px;
    background-color: var(--background);
    color: var(--text);
  }

  .submit-btn {
    padding: 0.8rem 1.5rem;
    background-color: var(--accent);
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: opacity 0.2s;
  }

  .submit-btn:hover {
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .contact-container {
      grid-template-columns: 1fr;
    }
  }
</style>

<script is:inline>
  const form = document.getElementById('form');
  const result = document.getElementById('result');

  form.addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(form);
    const object = Object.fromEntries(formData);
    const json = JSON.stringify(object);

    result.innerHTML = "Please wait...";

    fetch('https://api.web3forms.com/submit', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Accept': 'application/json'
      },
      body: json
    })
    .then(async (response) => {
      const jsonResponse = await response.json();
      if (response.ok) {
        result.innerHTML = jsonResponse.message;
      } else {
        console.error(response);
        result.innerHTML = "Error: " + jsonResponse.message;
      }
    })
    .catch(error => {
      console.error(error);
      result.innerHTML = "Something went wrong!";
    })
    .finally(() => {
      form.reset();
      setTimeout(() => {
        result.style.display = "none";
      }, 3000);
    });
  });
</script>

