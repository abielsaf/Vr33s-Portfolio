---
import Layout from '../layouts/Layout.astro';
import { languageStore } from '../store/language';
import { translations } from '../i18n/translations';

const lang = languageStore.getLanguage();
const t = translations[lang];
import Cat1 from '../images/Cat1.jpg';
import Comic1 from '../images/Comic1.jpg';
import Comic2 from '../images/Comic2.jpg';
import Others1 from '../images/Others1.jpg';
import Others2 from '../images/Others2.jpg';
import Others3 from '../images/Others3.jpg';

const images = [
  { src: Cat1, title: "Project 1" },
  { src: Comic1, title: "Project 2" },
  { src: Comic2, title: "Project 3" },
  { src: Others1, title: "Project 4" },
  { src: Others2, title: "Project 5" },
  { src: Others3, title: "Project 6" },
];
---

<Layout title={`${t.gallery.title} | Vr33s`}>
  <main>
    <h1>{t.gallery.title}</h1>
    <div class="gallery">
      {images.map((image) => (
        <div class="gallery-item">
          <img src={image.src} alt={image.title} loading="lazy" />
          <div class="overlay">
            <h3>{image.title}</h3>
          </div>
        </div>
      ))}
    </div>
  </main>
</Layout>

<style>
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  h1 {
    text-align: center;
    margin-bottom: 2rem;
  }

  .gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .gallery-item {
    position: relative;
    overflow: hidden;
    border-radius: 10px;
  }

  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 1rem;
    transform: translateY(100%);
    transition: transform 0.3s;
  }

  .gallery-item:hover img {
    transform: scale(1.1);
  }

  .gallery-item:hover .overlay {
    transform: translateY(0);
  }

  h3 {
    margin: 0;
    font-size: 1.2rem;
  }
</style>